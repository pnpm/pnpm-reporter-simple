{
  "name": "pnpm-simple-reporter",
  "version": "0.0.0",
  "description": "A simple reporter for pnpm",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": "lib/bin/pnpm-simple-reporter.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "tslint -c tslint.json --project .",
    "tsc": "rimraf lib && tsc",
    "prepublish": "npm run tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pnpm/pnpm-reporter-simple.git"
  },
  "keywords": [
    "pnpm-reporter"
  ],
  "author": "Zoltan Kochan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pnpm/pnpm-reporter-simple/issues"
  },
  "homepage": "https://github.com/pnpm/pnpm-reporter-simple#readme",
  "dependencies": {
    "@types/chalk": "^0.4.31",
    "@types/node": "^7.0.0",
    "chalk": "^1.1.3",
    "ndjson": "^1.5.0",
    "pnpm-logger": "^0.0.1"
  },
  "devDependencies": {
    "commitizen": "^2.9.5",
    "cz-conventional-changelog": "^1.2.0",
    "ghooks": "^2.0.0",
    "rimraf": "^2.5.4",
    "tslint": "^4.3.1",
    "typescript": "^2.1.5",
    "validate-commit-msg": "^2.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "node ./node_modules/validate-commit-msg/index.js"
    }
  }
}
